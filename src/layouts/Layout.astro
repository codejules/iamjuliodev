---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="iamjuliodev, Fullstack developer. B2C Salesforce Developer" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/code.png" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="/style.css">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
